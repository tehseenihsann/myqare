// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  PROVIDER
  CLIENT
}

enum BookingStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  HELD
  PROCESSING
  COMPLETED
  REFUNDED
}

enum NotificationType {
  BOOKING_CREATED
  BOOKING_ACCEPTED
  BOOKING_CANCELLED
  BOOKING_COMPLETED
  PAYMENT_PROCESSED
  PAYMENT_REFUNDED
  SYSTEM
}

model Category {
  id          String   @id @default(cuid())
  name        String
  icon        String?  // Icon name or URL
  description String?
  minPrice    Float?   // Minimum price range
  maxPrice    Float?   // Maximum price range
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  providers User[]

  @@index([isActive])
  @@index([name])
  @@map("categories")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String
  name          String?
  image         String?
  phone         String?
  role          UserRole  @default(CLIENT)
  categoryId    String?   // For providers
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // App relations
  category          Category? @relation(fields: [categoryId], references: [id])
  bookingsAsClient   Booking[] @relation("ClientBookings")
  bookingsAsProvider Booking[] @relation("ProviderBookings")
  paymentsAsClient   Payment[] @relation("ClientPayments")
  paymentsAsProvider Payment[] @relation("ProviderPayments")
  notifications      Notification[]
  bookingActivities  BookingActivity[]

  @@index([email])
  @@index([name])
  @@index([phone])
  @@index([role])
  @@index([isActive])
  @@index([createdAt])
  @@index([categoryId])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Booking {
  id            String        @id @default(cuid())
  clientId      String
  providerId    String?
  status        BookingStatus @default(PENDING)
  quotation     Float
  fromTime      DateTime
  toTime        DateTime
  location      Json // { address, latitude, longitude }
  paymentStatus PaymentStatus @default(PENDING)
  acceptedAt    DateTime?
  completedAt   DateTime?
  cancelledAt   DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  client       User     @relation("ClientBookings", fields: [clientId], references: [id])
  provider     User?    @relation("ProviderBookings", fields: [providerId], references: [id])
  payments     Payment[]
  notifications Notification[]
  activities   BookingActivity[]

  @@index([status])
  @@index([clientId])
  @@index([providerId])
  @@index([createdAt])
  @@index([fromTime])
  @@index([paymentStatus])
  @@map("bookings")
}

model BookingActivity {
  id          String   @id @default(cuid())
  bookingId   String
  userId      String   // User who performed the action (client or provider)
  action      String   // e.g., "created", "accepted", "cancelled", "completed", "status_changed"
  description String?  // Human-readable description
  metadata    Json?    // Additional data about the action
  createdAt   DateTime @default(now())

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@index([bookingId])
  @@index([userId])
  @@index([createdAt])
  @@map("booking_activities")
}

model Payment {
  id               String       @id @default(cuid())
  bookingId        String
  clientId         String
  providerId       String?
  amount           Float
  platformFee      Float
  providerPayout   Float
  status           PaymentStatus @default(PENDING)
  razorpayOrderId  String?
  razorpayPaymentId String?
  razorpayTransferId String?
  heldAt           DateTime?
  processedAt      DateTime?
  completedAt      DateTime?
  refundedAt       DateTime?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  // Relations
  booking       Booking         @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  client        User            @relation("ClientPayments", fields: [clientId], references: [id])
  provider      User?           @relation("ProviderPayments", fields: [providerId], references: [id])
  notifications Notification[]

  @@index([status])
  @@index([bookingId])
  @@index([clientId])
  @@index([providerId])
  @@index([createdAt])
  @@map("payments")
}

model Notification {
  id         String           @id @default(cuid())
  userId     String
  bookingId  String?
  paymentId  String?
  type       NotificationType
  title      String
  message    String
  read       Boolean          @default(false)
  link       String?
  metadata   Json?            // Additional data
  createdAt  DateTime         @default(now())

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  booking Booking? @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  payment Payment? @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@index([createdAt])
  @@map("notifications")
}
